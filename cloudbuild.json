{
    "steps": [
    {
        "name": "gcr.io/cloud-builders/docker",
        "args": [
            "build",
            "-t",
            "gcr.io/$PROJECT_ID/dog-breed-classifier-telegram_bot:$COMMIT_SHA",
            "."
        ]
    },
    {
        "name": "gcr.io/cloud-builders/docker",
        "args": [
            "push",
            "gcr.io/$PROJECT_ID/dog-breed-classifier-telegram_bot:$COMMIT_SHA"
        ]
    },
    {
        "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
        "entrypoint": "gcloud",
        "args": [
            "run",
            "deploy",
            "dog-breed-classifier-telegram-bot",
            "--image",
            "gcr.io/$PROJECT_ID/dog-breed-classifier-telegram_bot:$COMMIT_SHA",
            "--region",
            "asia-southeast2"
        ]
    }
    ],
    "images": ["gcr.io/$PROJECT_ID/dog-breed-classifier-telegram_bot:$COMMIT_SHA"],
    "options":{
      "logging": "CLOUD_LOGGING_ONLY"
    }
}